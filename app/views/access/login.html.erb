<div class="row">
  <div class="col-md-2 col-md-offset-5">

  <%= form_tag(login_path) do %>
<br>
<div class="form-group">
      <%= label_tag(:username, nil,class: "control-label slug") %>
      <%= text_field_tag :username, params[:username], autofocus: true, class: "form-control big-input" %>

</div>
<div class="form-group">

      <%= label_tag(:password,nil, class: "control-label slug") %>
      <%= password_field_tag(:password, nil, class: "form-control big-input") %>
</div>

<div class="form-group">
      <%= submit_tag("Log In", class: "btn btn-primary btn-lg btn-block") %>
</div>

  <% end %>


  </div>
</div>